#: import NoTransition kivy.uix.screenmanager.NoTransition

<RootElement>:
    orientation: 'vertical'
    MyNavigator:
        id: navigator
        Home:
            name: 'home'
        Manual:
            name: 'manual'
        Config:
            name: 'config'
        Reports:
            name: 'reports'
    MyNavBar:
        size_hint_y: None
        Button:
            text: 'Home'
            font_size: '20'
            on_release:
                root.ids.navigator.transition = NoTransition()
                root.ids.navigator.current = 'home'
            Image:
                source: 'images/home.png'
                y: self.parent.y + self.parent.height - 100
                x: self.parent.x
        Button:
            text: 'Manual'
            font_size: '20'
            on_release: 
                root.ids.navigator.transition = NoTransition()
                root.ids.navigator.current = 'manual'
            Image:
                source: 'images/hand.png'
                y: self.parent.y + self.parent.height - 100
                x: self.parent.x
        Button:
            text: 'Settings'
            font_size: '20'
            on_release: 
                root.ids.navigator.transition = NoTransition()
                root.ids.navigator.current = 'config'
            Image:
                source: 'images/config.png'
                y: self.parent.y + self.parent.height - 100
                x: self.parent.x
        Button:
            text: 'Reports'
            font_size: '20'
            on_release:
                root.ids.navigator.transition = NoTransition()
                root.ids.navigator.current = 'reports'
            Image:
                source: 'images/report.png'
                y: self.parent.y + self.parent.height - 100
                x: self.parent.x

<Home>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0.5, 0, 0.5
            Rectangle:
                pos:self.pos
                size:self.size
    	orientation: 'vertical'
        Label:
            text: 'Home'
            font_size: '40sp'
            bold:  True
            color: [0,1.0,0,1.0]

<Manual>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0.5, 0.5
            Rectangle:
                pos:self.pos
                size:self.size
        orientation: 'vertical'
        Label:
            text: 'Manual'
            font_size: '40sp'
            bold:  True
            color: [0,0,1.0,1.0]

<Config>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.5, 0, 0, 0.5
            Rectangle:
                pos:self.pos
                size:self.size
        orientation: 'vertical'
        Label:
            text: 'Config'
            font_size: '40sp'
            bold:  True
            color: [1.0,0,0,1.0]

<Reports>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.5, 0, 0.5, 0.5
            Rectangle:
                pos:self.pos
                size:self.size
        orientation: 'vertical'
        Label:
            text: 'Reports'
            font_size: '40sp'
            bold:  True
            color: [1.0,0,1.0,1.0]